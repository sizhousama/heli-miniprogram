/* 1.广告列表页 */
.page{
  background: #F5F5F5;
}

.weui-cell{
  margin-top: 0!important;
}
.act_btn{
  height: 80rpx;
}
.menu_btn{
  background: #ffffff;
  width: 26vw;
  border-radius: 10vw;
  height: 60rpx;
  color: #B3B3B3;
  font-size:26rpx;
  line-height:60rpx;
  text-align:center;

}
.bnt_l{
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left:14vw;

}
.bnt_r{
  display: flex;
  justify-content: center;
  align-items: center;
  padding-right:14vw;

}
.bnt_l image{
  width:30rpx;
  height:34rpx;
  padding-left:14rpx;
  padding-top:0;
  padding-bottom:0;
  padding-right:8rpx;

}
.bnt_r image{
  width:29rpx;
  height:35rpx;
  padding-left:14rpx;
  padding-top:0;
  padding-bottom:0;
  padding-right:8rpx;

}
.cont_right{
  width: 40%;
  height: 300rpx;
  background: #ffffff;
}
.cont_right image{
  border:1rpx solid #f5f5f5;
  width:34vw;
  height:30vw;
  margin:34rpx 0 34rpx 30rpx;

}
.cont_left{
  width: 60%;
  height: 300rpx;
  background: #ffffff;
}
.cont_tit{
  text-overflow: ellipsis;
  width: 55vw;
  height: 40%;
  color: #1A1A1A;
  font-size: 36rpx;
  overflow: hidden;
  -webkit-line-clamp: 2;
  padding: 20rpx;
  font-weight: 500;
  text-align: justify;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  word-break: break-all;

}
.cont_dit{
  width: 56vw;
  height: 10%;
  color: #8C8C8C;
  font-size: 26rpx;
  text-overflow: ellipsis;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
}
.cont_get{
  width: 100%;
  height: 30%;
  display: flex;

}
.cont_getl{
  width:50%;
  height:100%;
  color:#07BF42;
  font-size:26rpx;
  line-height:14vw;
  padding-left:20rpx;
}
.cont_getr{
  width: 50%;
  height: 100%;
  text-align: right;
}
.get_go{
  width: 18vw;
  height: 50rpx;
  border-radius:10vw;
  border: 2rpx solid #07BF42; 
  font-size:26rpx;
  color:#07BF42;
  text-align:center;
  line-height:50rpx;
  display: inline-block;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.b_solid{
  border-bottom: 2rpx solid #E5E5E5;
}
/* 发布按钮 */
.czbot{
  position: fixed;
  width:100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom:80rpx;
}
.Release{
  height: 80rpx;
  line-height:80rpx;
  text-align:center;
  background:#23D75D;
  border-radius:53px;
  font-size:30rpx;
  color:#FFFFFF;
  box-shadow:0rpx 1rpx 8rpx #23D75D;
  background-image:linear-gradient(90deg, #1EC052 0%, #23D75D 100%);
  padding:0 50rpx;
}
.Release image{
  width:36rpx;
  height:36rpx;
  margin:0 15rpx;
}


